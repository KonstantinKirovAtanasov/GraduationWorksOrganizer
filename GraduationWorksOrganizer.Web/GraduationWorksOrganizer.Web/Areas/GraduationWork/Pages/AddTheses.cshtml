@page
@using GraduationWorksOrganizer.Web.Helpers
@model GraduationWorksOrganizer.Web.Areas.GraduationWork.Pages.AddThesesModel
@{
    ViewData["Title"] = "Добави тема";
}
<h1>@ViewData["Title"]</h1>
<hr />

<form method="post" class="helpinfodefault" data-helpmessagekey="defaulthelpmessage">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group  helpinfo" data-helpmessagekey="email">
                <label>Заглавие</label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group helpinfo" data-helpmessagekey="password">
                <label>Описание:</label>
                <input asp-for="Input.Description" class="form-control" />
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-group helpinfo" data-helpmessagekey="confirmpassword">
                <label>Тип на заданието</label>
                <input asp-for="Input.Type" class="form-control" />
                <span asp-validation-for="Input.Type" class="text-danger"></span>
            </div>
            <div class="form-group helpinfo" data-helpmessagekey="specialty">
                <label>Специалност:</label>
                <select class="form-control" asp-for="Input.SpecialtyId" asp-items="@Html.GetEntityEnumSelectList(Model.Specialties)"></select>
                <span></span>
            </div>
            <button type="submit" class="btn btn-primary">Регистрация</button>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <section>
                <h4 class="helptitle"></h4>
                <div>
                    <p class="helpcontent"></p>
                </div>
            </section>
        </div>
    </div>
</form>

