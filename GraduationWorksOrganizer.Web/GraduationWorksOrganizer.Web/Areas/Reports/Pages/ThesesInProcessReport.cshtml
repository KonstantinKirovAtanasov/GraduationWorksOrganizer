@page
@model GraduationWorksOrganizer.Web.Areas.Reports.Pages.ThesesInProcessReportModel
@{
}
<p class="mb-1 h4 text-center">Справка за задания в процес на работа </p>
<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th class="text-center">Предмемт</th>
            <th class="text-center">Тема</th>
            <th class="text-center">Тип</th>
            <th class="text-center">Максимален брой точки</th>
            <th class="text-center">Дата на добавяне</th>
            <th class="text-center">Дата на започане</th>
            <th class="text-center">Дата на последна промяна</th>
            <th class="text-center">Студент</th>
            <th class="text-center">Статус</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var thinprogress in Model.ThesesInProgress)
        {
            <tr>
                <td class="small">@thinprogress.SubjectName</td>
                <td class="small">@thinprogress.ThesesTitle</td>
                <td class="small">@thinprogress.ThesesType</td>
                <td class="text-center small">@thinprogress.MaxPoints</td>
                <td class="text-center small">@thinprogress.ThesesCreationDate.ToLongDateString()</td>
                <td class="text-center small">@thinprogress.ProgressStart.ToLongDateString()</td>
                <td class="text-center small">@thinprogress.LastUpdate.ToLongDateString()</td>
                <td class="small">@thinprogress.StudentName (@thinprogress.StudentFacultyNumber)</td>
                @if (thinprogress.State == GraduationWorksOrganizer.Common.Enums.ThesisUserEntryState.Initialized)
                {
                    <td class="text-center text-info small">В процес на работа</td>
                }
                @if (thinprogress.State == GraduationWorksOrganizer.Common.Enums.ThesisUserEntryState.SendForApprovement)
                {
                    <td class="text-center text-primary small">Изпратена за одобрение</td>
                }
                @if (thinprogress.State == GraduationWorksOrganizer.Common.Enums.ThesisUserEntryState.Approve)
                {
                    <td class="text-center text-success small">Oдобренa за защита</td>
                }
            </tr>
        }
    </tbody>
</table>
